<!DOCTYPE html>
<html lang="es">

<!-- head -->
<%- include('./partials/head.ejs') %>

    <body>

        <!-- h e a d e r -->
        <%- include('./partials/header.ejs') %>
            <main class="main">

                <!--   C a r o u s e l     -->
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/op.jpg" class="d-block w-100 slider-img" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/n1.jpg" class="d-block w-100 slider-img" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/db1.jpg" class="d-block w-100 slider-img" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>

                <h2 class=" titulo-Destacados">Productos Destacados</h2>

                <!--  P r o d u c t o s   -->
                <section class="conteiner-products">
                    <% productos.forEach(producto=> { %>
                        <article class="product">
                            <a href="/products/detail/<%= producto.id %>">
                                <img class="img-product" src="/images/<%= producto.imagenes[0].name %> " alt="">
                                <div class="product-description">
                                    <h3 class="name-product">
                                        <%= producto.name %>
                                    </h3>
                                    <p>$ <%=producto.price%>
                                    </p>
                                    <p>
                                        <%=producto.cuotas%> <span>cuotas de </span>$ <%=( producto.price /
                                                producto.cuotas).toFixed(0) %>
                                    </p>
                                </div>
                            </a>
                        </article>
                        <% }) %>
                </section>
            </main>


            <!-- ChatBot -->
            <script src="https://account.snatchbot.me/script.js"></script>
            <script>window.sntchChat.Init(209015)</script>
            
            <!-- Footer -->
            <%- include('./partials/footer.ejs') %>
            <%- include('./partials/scripts.ejs') %>

                <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
                    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
                    crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
                    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
                    crossorigin="anonymous"></script>

    </body>

</html>